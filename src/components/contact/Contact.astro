<div class="min-h-screen flex items-center justify-center mb-20">
    <div class=" p-8 rounded-lg shadow-md w-full md:w-1/2 lg:w-1/3">
      <h2 class="text-6xl font-semibold mb-6 text-center mt-20">Contact me!</h2>
      <form action="https://fabform.io/f/7Dttd4P" method="POST" class="space-y-4 mt-20">
        <div class="flex items-center">
          <input type="text" id="name" name="name" class="flex-1 p-3 border border-gray-600 rounded focus:outline-none focus:border-blue-500" placeholder="Your Name">
        </div>
        <div class="flex items-center">
          <input type="email" id="email" name="email" class="flex-1 p-3 border border-gray-600 rounded focus:outline-none focus:border-blue-500" placeholder="Your Email">
        </div>
        <div class="flex items-center">
          <textarea id="message" name="message" rows="4" class="flex-1 p-3 border border-gray-600 rounded focus:outline-none focus:border-blue-500" placeholder="Your Message"></textarea>
        </div>
        <div class="flex justify-end">
          <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue active:bg-blue-800">
            Send Message
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 inline-block ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>